void reparar_solucao(Solution *s)
{
    // Se tiver poucos selecionados, adiciona aleatoriamente
    while (s->num_selected < prob.m)
    {
        int pos = random_l_h(0, prob.C - 1);
        if (!s->selected[pos])
        {
            s->selected[pos] = 1;
            s->num_selected++;
        }
    }
    // Se tiver a mais, remove aleatoriamente
    while (s->num_selected > prob.m)
    {
        int pos = random_l_h(0, prob.C - 1);
        if (s->selected[pos])
        {
            s->selected[pos] = 0;
            s->num_selected--;
        }
    }
}
